   "source": [
    "import sys\n",
    "n, m, k = tuple(map(int, sys.stdin.readline().split()))\n",
    "\n",
    "nums = list(map(int, sys.stdin.readline().split()))\n",
    "\n",
    "nums.sort()\n",
    "\n",
    "cnt = 0\n",
    "res = 0\n",
    "for i in range(m):\n",
    "    cnt += 1\n",
    "    if cnt > k:\n",
    "        res += nums[-2]\n",
    "        cnt = 0\n",
    "    else:\n",
    "        res += nums[-1]\n",
    "\n",
    "print(res)"
   ]
  }
