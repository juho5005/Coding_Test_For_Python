   "source": [
    "import sys\n",
    "n, k = tuple(map(int, sys.stdin.readline().split()))  # n >= k\n",
    "\n",
    "cnt = 0\n",
    "while n != 1:\n",
    "    if n % k == 0:\n",
    "        n //= k\n",
    "        cnt += 1\n",
    "    else:\n",
    "        n -= 1\n",
    "        cnt += 1\n",
    "\n",
    "print(cnt)"
   ]
  }
